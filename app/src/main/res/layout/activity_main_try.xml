        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_CH_3"
        android:id="@+id/ll_CH_4"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
